<%= form_with(model: activity, local: true, id:"activity-form", class: "siimple-form") do |form| %>
  <% if activity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(activity.errors.count, "error") %> prohibited this activity from being saved:</h2>

      <ul>
      <% activity.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="siimple-form-field">
    <%= form.label :label, class:"siimple-label" %>
    <%= form.text_field :label, id: :activity_label, class: "siimple-input " %>
  </div>
  <div class="siimple-form-field">
    <div id="submit-activity" class="siimple-btn siimple-btn--pink">Submit</div>
  </div>
<% end %>
