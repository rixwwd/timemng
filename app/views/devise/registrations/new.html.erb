<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class:"siimple-form") do |f| %>
  <%= devise_error_messages! %>

  <div class="siimple-form-field">
    <%= f.label :email, class:"siimple-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"siimple-input" %>
  </div>

  <div class="siimple-form-field">
    <%= f.label :password, class:"siimple-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class:"siimple-input" %>
  </div>

  <div class="siimple-form-field">
    <%= f.label :password_confirmation, class:"siimple-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"siimple-input" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
