<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"siimple-form") do |f| %>
  <div class="siimple-form-field">
    <%= f.label :email, class:"siimple-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"siimple-input" %>
  </div>

  <div class="siimple-form-field">
    <%= f.label :password, class:"siimple-label" %><br />
    <%= f.password_field :password, autocomplete: "off", class:"siimple-input" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="siimple-form-field">
      <%= f.check_box :remember_me, class:"siimple-checkbox" %>
      <%= f.label :remember_me, class:"siimple-label" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
