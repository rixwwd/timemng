
<div class="siimple-content">

<% if @current_activity.present? %>
    <div class="siimple-alert siimple-alert--grey" align="center">
        記録中...
        <%= @current_activity.activity.label %>
        <%= @current_activity.started_at %>
    </div>
<% end %>

<% if flash.now[:error].present? %>
<div class="siimple-alert siimple-alert--yellow"><%= flash.now[:error] %></div>
<% end %>

<%= render partial: "controller" %>

</div>